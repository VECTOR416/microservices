
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String? 
  price       Float
  stock       Int
  minStock    Int
  categoryId  String
  imageUrl    String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?  @updatedAt
}
