generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Sale {
  id           Int         @id @default(autoincrement())
  total        Float
  status       SaleStatus
  customerName String?     // puede ser nulo
  items        SaleItem[]  // relaci√≥n 1:N con SaleItem
}

model SaleItem {
  id          Int     @id @default(autoincrement())
  saleId      Int
  productId   String
  productName String
  quantity    Int
  unitPrice   Float
  subtotal    Float

  sale Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)
}
